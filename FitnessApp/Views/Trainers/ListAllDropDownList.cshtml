@model List<FitnessApp.ViewModels.TrainerViewModel>


@{
    ViewBag.Title = "ListAllDropDownList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListAllDropDownList</h2>

<form action="/" method="post"></form>
<select id="z">
